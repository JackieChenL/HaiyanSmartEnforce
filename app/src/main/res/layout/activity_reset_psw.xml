<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reset_psw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Module.Register.ResetPswActivity">

    <include layout="@layout/header"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/grey_devider"/>

    <LinearLayout
        android:id="@+id/ll_login_account"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical">



        <EditText
            android:id="@+id/et_resetPsw_account"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_marginLeft="20dp"
            android:hint="手机号"
            android:paddingLeft="20dp"
            android:textSize="15dp"
            android:inputType="number"
            android:textColorHint="@color/grey_400" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_devider" />

    <RelativeLayout
        android:id="@+id/ll_login_code"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical">



        <EditText
            android:id="@+id/et_resetPsw_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_marginLeft="20dp"
            android:hint="验证码"
            android:paddingLeft="20dp"
            android:textSize="15dp"
            android:textColorHint="@color/grey_400" />

        <TextView
            android:id="@+id/tv_resetPsw_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="获取验证码"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:background="@drawable/shape_blue_btn"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_devider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical">



        <EditText
            android:id="@+id/et_resetPsw_pswd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_marginLeft="20dp"
            android:hint="新密码"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textSize="15dp"
            android:textColorHint="@color/grey_400" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_devider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical">



        <EditText
            android:id="@+id/et_resetPsw_account_pswd_confirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_marginLeft="20dp"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textSize="15dp"
            android:textColorHint="@color/grey_400" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_devider" />
    
    <TextView
        android:id="@+id/tv_reserPsw_submit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/shape_blue_btn"
        android:text="确认修改"
        android:gravity="center"
        android:textSize="17sp"/>

</LinearLayout>
