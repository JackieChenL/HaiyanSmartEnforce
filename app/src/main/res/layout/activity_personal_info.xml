<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kas.clientservice.haiyansmartenforce.Module.PersonalInfo.PersonalInfoActivity">

    <include layout="@layout/header"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grey_devider"
        />

    <RelativeLayout
        android:id="@+id/rl_personalInfo_edit"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <com.kas.clientservice.haiyansmartenforce.Wedge.RoundImageView
            android:id="@+id/iv_personalInfo_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/loginhead"/>

        <TextView
            android:id="@+id/tv_personalInfo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_personalInfo_icon"
            android:layout_alignTop="@id/iv_personalInfo_icon"
            android:layout_marginLeft="15dp"
            android:textColor="@color/grey_900"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_personalInfo_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_personalInfo_name"
            android:layout_marginTop="10dp"
            android:textColor="@color/grey_900"
            android:layout_alignLeft="@id/tv_personalInfo_name"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:src="@drawable/arrow_right_blue"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_devider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:id="@+id/rl_personalInfo_identify"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">
                
                <ImageView
                    android:id="@+id/iv_personalInfo_renzheng"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:src="@drawable/identify"
                    android:layout_gravity="center"/>
                
                <TextView
                    android:id="@+id/tv_personalInfo_renzheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实名认证"
                    android:textColor="@color/grey_900"
                    android:layout_gravity="center_vertical"/>
                
            </LinearLayout>
            
            
            
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_personalInfo_score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/iv_personalInfo_jifen"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/my_score"
                    android:padding="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的积分"
                    android:textColor="@color/grey_900"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>



        </RelativeLayout>

    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grey_devider"/>
    
    <RelativeLayout
        android:id="@+id/rl_personalInfo_qiandao"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/iv_personalInfo_qiandao"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/qiandao"
            android:padding="5dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tv_personalInfo_signNum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="已连续签到1天"
            android:textColor="@color/grey_900"
            android:layout_toRightOf="@id/iv_personalInfo_qiandao"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tv_personalinfo_qiandao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:text="签到"
            android:background="@drawable/shape_blue_stroke"
            android:textColor="@color/app_original_blue"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grey_devider"/>

    <RelativeLayout
        android:id="@+id/rl_personalInfo_myCommit"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/iv_personalInfo_shangbao"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/my_commit"
            android:padding="5dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/iv_personalInfo_shangbao"
            android:text="我的上报"
            android:textColor="@color/grey_900"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:src="@drawable/arrow_right_blue"
            android:textColor="@color/app_original_blue"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_devider"/>

    <RelativeLayout
        android:id="@+id/rl_personalInfo_help"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/iv_personalInfo_help"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/help"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/iv_personalInfo_help"
            android:text="在线帮助"
            android:textColor="@color/grey_900"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:src="@drawable/arrow_right_blue"
            android:textColor="@color/app_original_blue"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_devider"/>

    <RelativeLayout
        android:id="@+id/rl_personalInfo_youhuiquan"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/iv_personalInfo_youhui"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/youhuiquan"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/iv_personalInfo_youhui"
            android:text="我的优惠券"

            android:textColor="@color/grey_900"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:src="@drawable/arrow_right_blue"
            android:textColor="@color/app_original_blue"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_devider"/>

</LinearLayout>
