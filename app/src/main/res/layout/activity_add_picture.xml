<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_header" />

    <ScrollView
        android:id="@+id/scv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout style="@style/item_style_lin">

                <TextView
                    style="@style/item_style_l"
                    android:text="拍摄人:" />

                <TextView
                    android:id="@+id/tev_ShotManPho"
                    style="@style/item_center_style" />

            </LinearLayout>

            <TextView style="@style/item_divider" />


            <LinearLayout style="@style/item_style_lin">

                <TextView
                    style="@style/item_style_l"
                    android:text="拍摄时间:" />

                <TextView
                    android:id="@+id/tev_ShotTimePho"
                    style="@style/item_center_style" />

            </LinearLayout>

            <TextView style="@style/item_divider" />


            <LinearLayout style="@style/item_style_lin">

                <TextView
                    style="@style/item_style_l"
                    android:text="拍摄地址:" />

                <TextView
                    android:id="@+id/tev_ShotAddressPho"
                    style="@style/item_center_style" />

            </LinearLayout>

            <TextView style="@style/item_divider" />


            <RelativeLayout
                style="@style/item_style_rtl"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tev_ExplainPho_l"
                    style="@style/item_style_l"
                    android:text="证明内容:" />

            </RelativeLayout>

            <TextView style="@style/item_divider" />

            <LinearLayout style="@style/item_style_lin">

                <EditText
                    android:id="@+id/edt_ExplainPho"
                    style="@style/item_style_input"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/border"
                    android:hint="请输入证明内容"
                    android:minHeight="100dp"
                    android:padding="3dp" />

            </LinearLayout>

            <TextView style="@style/item_divider" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>


    </ScrollView>
</LinearLayout>
