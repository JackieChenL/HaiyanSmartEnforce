<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <include
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_title"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        >
        <TextView
            android:id="@+id/tv_door"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="门牌:海盐县百步镇"
            android:textSize="20dp"
            android:textColor="#000000"/>
        <Spinner
            android:id="@+id/sp_town"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_door"
            android:background="#F5F5F5"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sp_town"
            android:layout_alignParentRight="true"
            android:hint="门牌"
            android:textColor="#000000"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/bt_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_door"
            android:layout_weight="2"
            android:background="@drawable/shape_log"
            android:text="搜索"
            android:textSize="@dimen/text_button"
            android:textColor="@color/white" />
        <View
            android:id="@+id/ve_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#A9A9A9"
            android:layout_below="@+id/bt_search"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_zhangsan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="张三:海盐县百步镇百联村70号"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ve_1"
            android:textSize="30dp"
            android:textColor="#000000"/>
        <View
            android:id="@+id/ve_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#A9A9A9"
            android:layout_below="@+id/tv_zhangsan"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>
</RelativeLayout>
