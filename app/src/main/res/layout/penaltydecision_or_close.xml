<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/action_bar_blue"
    	android:id="@+id/rl_title" >

        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="10dp"
            android:paddingTop="30dp"
            android:text="标题"
            android:textColor="@color/grey_600"
            android:textSize="20sp" >
        </TextView>

        <ImageView
            android:id="@+id/iv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="30dp"
            android:src="@drawable/back" />
        
        <Button 
            android:id="@+id/bt_case_details"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="案件详情"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_blue_btn"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>
    
     <ScrollView 
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         >
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             >
            <LinearLayout 
            android:id="@+id/ll_punish_decision"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/rl_case_edt_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingLeft="20dp" >

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="案件来源及违法事实"
                    />

                <TextView
                    android:id="@+id/tv_source_fact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/tv_time"
                    android:paddingBottom="10dp"
                    android:textColorHint="#cccccc"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray"
                     />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="#e3e3e3" />
            
            <RelativeLayout
                android:id="@+id/rl_case_edt_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingLeft="20dp" >

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="证据清单及证据内容"
                    />

                <TextView
                    android:id="@+id/tv_evidence_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/tv_time"
                    android:paddingBottom="10dp"
                    android:textColorHint="#cccccc"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray"
                     />
            </RelativeLayout>
        </LinearLayout> 
        
            <LinearLayout 
            android:id="@+id/ll_close_case"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingLeft="20dp" >

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="简要案情查处经过"
                    />

                <TextView
                    android:id="@+id/tv_close_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/tv_time"
                    android:paddingBottom="10dp"
                    android:textColorHint="#cccccc"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray"
                     />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="#e3e3e3" />
            
            <RelativeLayout
                android:id="@+id/rl_case_edt_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingLeft="20dp" >

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="行政处罚内容"
                    />

                <TextView
                    android:id="@+id/tv_close_punish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/tv_time"
                    android:paddingBottom="10dp"
                    android:textColorHint="#cccccc"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray"
                     />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="#e3e3e3" />
            <RelativeLayout
                android:id="@+id/rl_case_edt_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingLeft="20dp" >

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="处罚执行方式及处置"
                    />

                <TextView
                    android:id="@+id/tv_close_dispose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/tv_time"
                    android:paddingBottom="10dp"
                    android:textColorHint="#cccccc"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray"
                     />
            </RelativeLayout>
        </LinearLayout> 
        
            
           <RelativeLayout 
                android:id="@+id/rl_opinion"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingLeft="20dp"
	    android:background="@android:color/white"
	    android:layout_marginTop="5dp"
	    >
	    <TextView
	        android:id="@+id/tv_work_end"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="审批意见"
	        android:paddingTop="15dp"
	        android:paddingBottom="15dp"
	         />
	    <EditText
	        android:id="@+id/et_examine_opinion"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/tv_work_end"
	        android:textSize="16sp"
	        android:hint="请输入意见"
	        android:paddingBottom="10dp"
	        android:background="@null"
	         />
	</RelativeLayout>
	
       <RelativeLayout 
           android:id="@+id/rl_but"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginTop="5dp"
	    android:background="@android:color/white"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    >
	     <TextView 
	         android:id="@+id/tv_case_flow"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="案件流"
	            android:drawableTop="@drawable/btnbaricon_lc"
	            android:layout_alignParentBottom="true"
	            android:gravity="center"
	            android:layout_marginLeft="25dp"
	            android:layout_marginBottom="10dp"
	            />
	        <TextView 
	            android:id="@+id/tv_fiel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="附件"
	            android:drawableTop="@drawable/btnbaricon_fiel"
	            android:layout_alignParentBottom="true"
	            android:gravity="center"
	            android:layout_toRightOf="@id/tv_case_flow"
	            android:layout_marginLeft="25dp"
	            android:layout_marginBottom="10dp"
	            />
	        <TextView 
	            android:id="@+id/tv_back"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="退回"
	            android:drawableTop="@drawable/tabbaricon_back"
	            android:layout_alignParentBottom="true"
	            android:gravity="center"
	            android:layout_toRightOf="@id/tv_fiel"
	            android:layout_marginLeft="25dp"
	            android:layout_marginBottom="10dp"
	            />
	        <Button 
	            android:id="@+id/bt_case_submit"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="提交"
	            android:layout_alignParentBottom="true"
	            android:gravity="center"
	            android:background="@drawable/shape_blue_btn"
	      		android:textColor="@color/grey_600"
	      		android:layout_toRightOf="@id/tv_back"
	      		android:layout_marginLeft="25dp"
	      		android:layout_alignParentRight="true"
	      		android:layout_marginRight="25dp"
	      		android:layout_marginBottom="10dp"
	            />
	    
	</RelativeLayout>
             
         </LinearLayout>
         
     </ScrollView>

</LinearLayout>
