<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_huanwei_handle_commit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.kas.clientservice.haiyansmartenforce.Module.HuanWeiModule.HuanweiHandleCommitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="50dp">

        <include layout="@layout/header" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/grey_devider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="top|right"
                android:text="情况描述："
                android:textSize="17sp"
                />

            <EditText
                android:id="@+id/et_huanwei_handle_detail_commit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:hint="请输入问题描述"
                android:padding="0dp"
                android:textSize="17sp"
                android:background="@color/white"
                android:textColorHint="@color/grey_500"
                android:gravity="top|left"/>



        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/grey_devider"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_huanwei_handle_commit"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </android.support.v7.widget.RecyclerView>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_huanwei_handle_commit_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_original_blue"
        android:textColor="@color/white"
        android:text="上报"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
