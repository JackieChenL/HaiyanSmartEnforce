<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/header" />


    <ImageView
        android:id="@+id/imv_goods"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp" />

    <LinearLayout style="@style/item_style_lin">

        <TextView
            style="@style/item_style_l"
            android:text="物品分类：" />

        <TextView
            android:id="@+id/tev_GoodsClassifyIDWit"
            style="@style/item_style_center"
            android:hint="选择物品分类" />

    </LinearLayout>

    <View style="@style/item_divider" />

    <LinearLayout style="@style/item_style_lin">

        <TextView
            style="@style/item_style_l"
            android:text="物品名称：" />

        <EditText
            android:id="@+id/edt_NameWit"
            style="@style/item_style_center"
            android:hint="请输入物品名称" />

    </LinearLayout>


    <View style="@style/item_divider" />

    <LinearLayout style="@style/item_style_lin">

        <TextView
            style="@style/item_style_l"
            android:text="物品数量：" />

        <EditText
            android:id="@+id/edt_CountWit"
            style="@style/item_style_center"
            android:hint="请输入物品数量"
            android:inputType="numberDecimal" />

    </LinearLayout>

    <View style="@style/item_divider" />

    <LinearLayout style="@style/item_style_lin">

        <TextView
            style="@style/item_style_l"
            android:text="规格型号：" />

        <EditText
            android:id="@+id/edt_ModelWit"
            style="@style/item_style_center"
            android:hint="请输入物品规格型号" />

    </LinearLayout>

    <View style="@style/item_divider" />

    <LinearLayout style="@style/item_style_lin">

        <TextView
            style="@style/item_style_l"
            android:text="物品单位：" />

        <EditText
            android:id="@+id/edt_UnitWit"
            style="@style/item_style_center"
            android:hint="请输入物品单位" />

    </LinearLayout>

    <View style="@style/item_divider" />


    <LinearLayout style="@style/item_style_lin">

        <TextView
            style="@style/item_style_l"
            android:text="备注信息：" />

        <EditText
            android:id="@+id/edt_RemarkWit"
            style="@style/item_style_input"
            android:background="@drawable/border"
            android:hint=""
            android:maxLines="5" />
    </LinearLayout>

    <View style="@style/item_divider" />

    <LinearLayout
        style="@style/item_style_lin"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tev_del"
            style="@style/item_style_l"
            android:layout_height="40dp"
            android:background="@drawable/button_round_blue"
            android:gravity="center"
            android:minWidth="80dp"
            android:text="删除"
            android:textColor="@color/app_original_blue" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tev_save"
            style="@style/item_style_l"
            android:layout_height="40dp"
            android:background="@drawable/button_round_blue"
            android:gravity="center"
            android:minWidth="80dp"
            android:text="保存"
            android:textColor="@color/app_original_blue" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>