<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_header" />


    <ImageView
        android:id="@+id/imv_goods"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:padding="10dp" />

    <LinearLayout style="@style/item_style_lin">

        <TextView
            style="@style/item_style_l"
            android:text="物品分类：" />

        <TextView
            android:id="@+id/tev_GoodsClassifyIDWit"
            style="@style/item_style_center"
            android:hint="" />

    </LinearLayout>

    <View style="@style/item_divider" />

    <LinearLayout style="@style/item_style_lin">

        <TextView
            style="@style/item_style_l"
            android:text="物品名称：" />

        <TextView
            android:id="@+id/tev_NameWit"
            style="@style/item_style_center"
            android:hint="" />

    </LinearLayout>


    <View style="@style/item_divider" />

    <LinearLayout style="@style/item_style_lin">

        <TextView
            style="@style/item_style_l"
            android:text="物品数量：" />

        <TextView
            android:id="@+id/tev_CountWit"
            style="@style/item_style_center"
            android:hint=""
            android:inputType="numberDecimal" />

    </LinearLayout>

    <View style="@style/item_divider" />

    <LinearLayout style="@style/item_style_lin">

        <TextView
            style="@style/item_style_l"
            android:text="规格型号：" />

        <TextView
            android:id="@+id/tev_ModelWit"
            style="@style/item_style_center"
            android:hint="" />

    </LinearLayout>

    <View style="@style/item_divider" />

    <LinearLayout style="@style/item_style_lin">

        <TextView
            style="@style/item_style_l"
            android:text="物品单位：" />

        <TextView
            android:id="@+id/tev_UnitWit"
            style="@style/item_style_center"
            android:hint="" />

    </LinearLayout>

    <View style="@style/item_divider" />


    <LinearLayout style="@style/item_style_lin">

        <TextView
            style="@style/item_style_l"
            android:text="备注信息：" />

        <TextView
            android:id="@+id/tev_RemarkWit"
            style="@style/item_center_style"
            android:text=""
             />
    </LinearLayout>

    <View style="@style/item_divider" />


</LinearLayout>