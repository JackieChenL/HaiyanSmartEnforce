<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >



    <LinearLayout
        style="@style/lin_parent">

        <TextView
            android:text="车牌号码："
            style="@style/lin_child_tev" />

        <EditText
            android:id="@+id/tev_cphm"
            style="@style/lin_child_edtv" />

        <TextView
            android:id="@+id/tev_smcp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:clickable="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/sm"
            />


    </LinearLayout>


    <LinearLayout
        style="@style/lin_parent">

        <TextView
            android:text="停入时间："
            style="@style/lin_child_tev" />

        <TextView
            android:id="@+id/tev_trsj"
            android:clickable="true"
            style="@style/lin_child_edtv" />

    </LinearLayout>


    <LinearLayout
        style="@style/lin_parent">

        <TextView
            android:text="泊位编号："
            style="@style/lin_child_tev" />

        <TextView
            android:id="@+id/tev_pwbh"
            android:clickable="true"
            style="@style/lin_child_edtv" />

    </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />





    <TextView
        android:id="@+id/tev_tcdy"
        style="@style/center_style"
        android:padding="15dp"
        android:text="停车打印"/>


</LinearLayout>
</ScrollView>