<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_house"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="80dp"
        android:text="户主:"
        android:textSize="40dp" />
    <!--<EditText-->
    <!--android:id="@+id/et_house"-->
    <!--android:layout_width="100dp"-->
    <!--android:layout_height="70dp"-->
    <!--android:layout_marginTop="70dp"-->
    <!--android:textSize="40dp"-->
    <!--android:layout_toRightOf="@+id/tv_house"/>-->
    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_house"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="地址：xx街xx号"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bt_good"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_log"
        android:text="好"
        android:textSize="40dp" />

    <Button
        android:id="@+id/bt_commonly"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/bt_good"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_log"
        android:text="一般"
        android:textSize="40dp" />

    <Button
        android:id="@+id/bt_bad"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_log"
        android:text="差"
        android:textSize="40dp" />
</LinearLayout>
