<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            layout="@layout/layout_header" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    style="@style/item_style_rtl">

                    <TextView
                        android:id="@+id/tev_StartTimeInq_l"
                        style="@style/item_style_l"
                        android:text="开始时间:" />

                    <TextView
                        android:id="@+id/tev_StartTimeInq"
                        style="@style/item_style_center"
                        android:layout_toRightOf="@+id/tev_StartTimeInq_l" />

                </RelativeLayout>
                <TextView style="@style/item_divider" />

                <RelativeLayout
                    style="@style/item_style_rtl">

                    <TextView
                        android:id="@+id/tev_EndTimeInq_l"
                        style="@style/item_style_l"
                        android:text="结束时间:" />

                    <TextView
                        android:id="@+id/tev_EndTimeInq"
                        style="@style/item_style_center"
                        android:layout_toRightOf="@+id/tev_EndTimeInq_l" />

                </RelativeLayout>
                <TextView style="@style/item_divider" />


                <RelativeLayout
                    style="@style/item_style_rtl">

                    <TextView
                        android:id="@+id/tev_AddressInq_l"
                        style="@style/item_style_l"
                        android:text="检查地点:" />

                    <TextView
                        android:id="@+id/tev_AddressInq"
                        style="@style/item_style_center"
                        android:layout_toRightOf="@+id/tev_AddressInq_l" />

                </RelativeLayout>
                <TextView style="@style/item_divider" />

                <LinearLayout
                    android:id="@+id/llt_citizen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <RelativeLayout style="@style/item_style_rtl">

                        <TextView
                            android:id="@+id/tev_Name"
                            style="@style/item_style_l"
                            android:text="被检查人:" />



                        <TextView
                            android:id="@+id/tev_Name_cit"
                            style="@style/item_style_center"
                            android:layout_toRightOf="@+id/tev_Name"
                            android:hint="" />

                    </RelativeLayout>

                    <TextView style="@style/item_divider" />

                    <RelativeLayout style="@style/item_style_rtl">

                        <TextView
                            android:id="@+id/tev_sex_l"
                            style="@style/item_style_l"
                            android:text="性别:" />



                        <TextView
                            android:id="@+id/tev_sex"
                            style="@style/item_style_center"
                            android:layout_toRightOf="@+id/tev_sex_l"
                            android:hint="" />

                    </RelativeLayout>

                    <TextView style="@style/item_divider" />


                    <RelativeLayout style="@style/item_style_rtl">

                        <TextView
                            android:id="@+id/tev_nation_l"
                            style="@style/item_style_l"
                            android:text="名族:" />

                        <TextView
                            android:id="@+id/tev_nation"
                            style="@style/item_style_center"
                            android:layout_toRightOf="@+id/tev_nation_l"
                            android:hint="" />

                    </RelativeLayout>

                    <TextView style="@style/item_divider" />

                    <RelativeLayout style="@style/item_style_rtl">

                        <TextView
                            android:id="@+id/tev_card_l"
                            style="@style/item_style_l"
                            android:text="身份证号:" />

                        <TextView
                            android:id="@+id/tev_card_cit"
                            style="@style/item_style_center"
                            android:layout_toRightOf="@+id/tev_card_l"
                            android:hint="" />

                    </RelativeLayout>

                    <TextView style="@style/item_divider" />

                    <RelativeLayout style="@style/item_style_rtl">

                        <TextView
                            android:id="@+id/tev_phone"
                            style="@style/item_style_l"
                            android:text="联系电话:" />

                        <TextView
                            android:id="@+id/tev_mobile_cit"
                            style="@style/item_style_center"
                            android:layout_toRightOf="@+id/tev_phone"
                            android:hint="" />

                    </RelativeLayout>

                    <TextView style="@style/item_divider" />

                    <RelativeLayout style="@style/item_style_rtl">

                        <TextView
                            android:id="@+id/tev_address"
                            style="@style/item_style_l"
                            android:text="住址:" />

                        <TextView
                            android:id="@+id/tev_address_cit"
                            style="@style/item_style_center"
                            android:layout_toRightOf="@+id/tev_address"
                            android:hint="" />

                    </RelativeLayout>

                    <TextView style="@style/item_divider" />

                    <RelativeLayout style="@style/item_style_rtl">

                        <TextView
                            android:id="@+id/tev_postcode"
                            style="@style/item_style_l"
                            android:text="邮政编码:" />

                        <TextView
                            android:id="@+id/tev_postcode_cit"
                            style="@style/item_style_center"
                            android:layout_toRightOf="@+id/tev_postcode"
                            android:hint="" />

                    </RelativeLayout>
                    <TextView style="@style/item_divider" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llt_enterprise"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <RelativeLayout
                        style="@style/item_style_rtl">

                        <TextView
                            android:id="@+id/tev_name"
                            style="@style/item_style_l"
                            android:text="被检查单位:" />



                        <TextView
                            android:id="@+id/tev_name_ent"
                            style="@style/item_style_center"
                            android:hint=""
                            android:layout_toRightOf="@+id/tev_name" />

                    </RelativeLayout>

                    <TextView style="@style/item_divider" />
                    <RelativeLayout
                        style="@style/item_style_rtl">

                        <TextView
                            android:id="@+id/tev_operator_title"
                            style="@style/item_style_l"
                            android:text="经营者:" />


                        <TextView
                            android:id="@+id/tev_operator"
                            style="@style/item_style_center"
                            android:hint=""
                            android:layout_toRightOf="@+id/tev_operator_title" />

                    </RelativeLayout>

                    <TextView style="@style/item_divider" />
                    <RelativeLayout
                        style="@style/item_style_rtl">

                        <TextView
                            android:id="@+id/tev_license_"
                            style="@style/item_style_l"
                            android:text="营业执照:" />


                        <TextView
                            android:id="@+id/tev_license"
                            style="@style/item_style_center"
                            android:hint=""
                            android:layout_toRightOf="@+id/tev_license_" />

                    </RelativeLayout>

                    <TextView style="@style/item_divider" />


                    <RelativeLayout
                        style="@style/item_style_rtl">

                        <TextView
                            android:id="@+id/tev_mobile_"
                            style="@style/item_style_l"
                            android:text="联系电话:" />


                        <TextView
                            android:id="@+id/tev_mobile"
                            style="@style/item_style_center"
                            android:hint=""
                            android:layout_toRightOf="@+id/tev_mobile_" />

                    </RelativeLayout>

                    <TextView style="@style/item_divider" />

                    <RelativeLayout
                        style="@style/item_style_rtl">

                        <TextView
                            android:id="@+id/tev_address_title"
                            style="@style/item_style_l"
                            android:text="经营场所:" />


                        <TextView
                            android:id="@+id/tev_address_ent"
                            style="@style/item_style_center"
                            android:hint=""
                            android:layout_toRightOf="@+id/tev_address_title" />

                    </RelativeLayout>

                    <TextView style="@style/item_divider" />


                    <RelativeLayout
                        style="@style/item_style_rtl">

                        <TextView
                            android:id="@+id/tev_postcode_"
                            style="@style/item_style_l"
                            android:text="邮政编码:" />


                        <TextView
                            android:id="@+id/tev_postcode_ent"
                            style="@style/item_style_center"
                            android:hint=""
                            android:layout_toRightOf="@+id/tev_postcode_" />

                    </RelativeLayout>
                    <TextView style="@style/item_divider" />
                </LinearLayout>

                <RelativeLayout
                    style="@style/item_style_rtl">

                    <TextView
                        android:id="@+id/tev_HaManInq_l"
                        style="@style/item_style_l"
                        android:text="现场负责人:" />

                    <TextView
                        android:id="@+id/tev_HaManInq"
                        style="@style/item_style_center"
                        android:layout_toRightOf="@+id/tev_HaManInq_l" />

                </RelativeLayout>
                <TextView style="@style/item_divider" />


                <RelativeLayout
                    style="@style/item_style_rtl">

                    <TextView
                        android:id="@+id/tev_HaMPositionInq_l"
                        style="@style/item_style_l"
                        android:text="职务:" />

                    <TextView
                        android:id="@+id/tev_HaMPositionInq"
                        style="@style/item_style_center"
                        android:layout_toRightOf="@+id/tev_HaMPositionInq_l" />

                </RelativeLayout>
                <TextView style="@style/item_divider" />

                <RelativeLayout
                    style="@style/item_style_rtl">

                    <TextView
                        android:id="@+id/tev_HaMIdentityCardInq_l"
                        style="@style/item_style_l"
                        android:text="身份证:" />

                    <TextView
                        android:id="@+id/tev_HaMIdentityCardInq"
                        style="@style/item_style_center"
                        android:layout_toRightOf="@+id/tev_HaMIdentityCardInq_l" />

                </RelativeLayout>
                <TextView style="@style/item_divider" />

                <RelativeLayout
                    style="@style/item_style_rtl">

                    <TextView
                        android:id="@+id/tev_WitManInq_l"
                        style="@style/item_style_l"
                        android:text="其他见证人:" />

                    <TextView
                        android:id="@+id/tev_WitManInq"
                        style="@style/item_style_center"
                        android:layout_toRightOf="@+id/tev_WitManInq_l" />

                </RelativeLayout>
                <TextView style="@style/item_divider" />

                <RelativeLayout
                    style="@style/item_style_rtl">

                    <TextView
                        android:id="@+id/tev_WitWorkPlaceInq_l"
                        style="@style/item_style_l"
                        android:text="工作单位:" />

                    <TextView
                        android:id="@+id/tev_WitWorkPlaceInq"
                        style="@style/item_style_center"
                        android:layout_toRightOf="@+id/tev_WitWorkPlaceInq_l" />

                </RelativeLayout>
                <TextView style="@style/item_divider" />

                <RelativeLayout
                    style="@style/item_style_rtl">

                    <TextView
                        android:id="@+id/tev_EmpNameInq_l"
                        style="@style/item_style_l"
                        android:text="检查人:" />

                    <TextView
                        android:id="@+id/tev_Rummager"
                        style="@style/item_style_center"
                        android:layout_toRightOf="@+id/tev_EmpNameInq_l" />

                </RelativeLayout>
                <TextView style="@style/item_divider" />

                <RelativeLayout
                    style="@style/item_style_rtl">

                    <TextView
                        android:id="@+id/tev_RecordManInq_l"
                        style="@style/item_style_l"
                        android:text="记录人:" />

                    <TextView
                        android:id="@+id/tev_Record"
                        style="@style/item_style_center"
                        android:layout_toRightOf="@+id/tev_RecordManInq_l" />

                </RelativeLayout>
                <TextView style="@style/item_divider" />

                <RelativeLayout
                    style="@style/item_style_rtl"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/tev_PresentSituationInq_l"
                        style="@style/item_style_l"
                        android:text="当事人到场情况:" />

                    <TextView
                        android:id="@+id/tev_PresentSituationInq"
                        style="@style/item_style_center"
                        android:singleLine="false"
                        android:layout_toRightOf="@+id/tev_PresentSituationInq_l" />

                </RelativeLayout>
                <TextView style="@style/item_divider" />


                <RelativeLayout
                    style="@style/item_style_rtl"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/tev_FieldConditionInq_l"
                        style="@style/item_style_l"
                        android:text="检查情况:" />

                    <TextView
                        android:id="@+id/tev_FieldConditionInq"
                        style="@style/item_style_center"
                        android:singleLine="false"
                        android:layout_toRightOf="@+id/tev_FieldConditionInq_l" />

                </RelativeLayout>
                <TextView style="@style/item_divider" />

             <android.support.v7.widget.RecyclerView
                 android:id="@+id/rcv_list"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 >

             </android.support.v7.widget.RecyclerView>



            </LinearLayout>


        </ScrollView>
    </LinearLayout>


