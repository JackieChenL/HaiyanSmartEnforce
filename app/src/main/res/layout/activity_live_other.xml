<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llt_person"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/layout_header_blue" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="15dp"
            android:orientation="vertical">

            <RelativeLayout
                style="@style/item_style_rtl">

                <TextView
                    android:id="@+id/tev_xm_l"
                    style="@style/item_style_l"
                    android:text="姓名:" />

                <TextView
                    android:id="@+id/tev_search"
                    style="@style/item_style_r"
                    android:background="@drawable/listicon_search" />

                <EditText
                    android:id="@+id/edt_name"
                    style="@style/item_style_center"
                    android:hint=""
                    android:layout_toLeftOf="@+id/tev_search"
                    android:layout_toRightOf="@+id/tev_xm_l" />

            </RelativeLayout>

            <TextView style="@style/item_divider" />
            <RelativeLayout
                style="@style/item_style_rtl">

                <TextView
                    android:id="@+id/tev_sfzh_l"
                    style="@style/item_style_l"
                    android:text="身份证:" />

                <EditText
                    android:id="@+id/edt_sfz"
                    style="@style/item_style_center"
                    android:hint=""
                    android:layout_toRightOf="@+id/tev_sfzh_l" />

            </RelativeLayout>
            <TextView style="@style/item_divider" />


            <RelativeLayout
                style="@style/item_style_rtl">

                <TextView
                    android:id="@+id/tev_lxfs_l"
                    style="@style/item_style_l"
                    android:text="联系方式:" />



                <EditText
                    android:id="@+id/edt_phone"
                    style="@style/item_style_center"
                    android:hint=""
                    android:inputType="phone"
                    android:layout_toRightOf="@+id/tev_lxfs_l" />

            </RelativeLayout>
            <TextView style="@style/item_divider"
                android:layout_height="20dp"/>



            <RelativeLayout
                style="@style/item_style_rtl">

                <TextView
                    android:id="@+id/tev_xb_l"
                    style="@style/item_style_l"
                    android:text="性别:" />

                <TextView
                    android:id="@+id/tev_sex"
                    style="@style/item_style_center"
                    android:hint=""
                    android:layout_toRightOf="@+id/tev_xb_l" />



            </RelativeLayout>

            <TextView style="@style/item_divider" />

            <RelativeLayout
                style="@style/item_style_rtl">

                <TextView
                    android:id="@+id/tev_mz_l"
                    style="@style/item_style_l"
                    android:text="民族:" />



                <TextView
                    android:id="@+id/tev_mz"
                    style="@style/item_style_center"
                    android:hint=""
                    android:layout_toRightOf="@+id/tev_mz_l" />

            </RelativeLayout>

            <TextView style="@style/item_divider" />



            <RelativeLayout
                style="@style/item_style_rtl">

                <TextView
                    android:id="@+id/tev_lxdz_l"
                    style="@style/item_style_l"
                    android:text="联系地址:" />



                <EditText
                    android:id="@+id/edt_address"
                    style="@style/item_style_center"
                    android:hint=""
                    android:layout_toRightOf="@+id/tev_lxdz_l" />

            </RelativeLayout>

            <TextView style="@style/item_divider" />




            <RelativeLayout
                style="@style/item_style_rtl">

                <TextView
                    android:id="@+id/tev_yb_l"
                    style="@style/item_style_l"
                    android:text="邮编:" />



                <EditText
                    android:id="@+id/edt_email"
                    style="@style/item_style_center"
                    android:hint=""
                    android:layout_toRightOf="@+id/tev_yb_l" />

            </RelativeLayout>

            <TextView style="@style/item_divider" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>