<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.kas.clientservice.haiyansmartenforce.tcsf.aty.CenterActivity">

    <include
        android:id="@+id/header"
        layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/grey_100" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llt_park"
                    style="@style/lin_tcsf">

                    <ImageView
                        style="@style/imv_tcsf"
                        android:src="@drawable/tcsf_icon_tc" />

                    <TextView
                        style="@style/tev_tcsf"
                        android:text="停车" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llt_exit"
                    style="@style/lin_tcsf">

                    <ImageView
                        style="@style/imv_tcsf"
                        android:src="@drawable/tcsf_icon_lk" />

                    <TextView
                        style="@style/tev_tcsf"
                        android:text="离开" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llt_query"
                    style="@style/lin_tcsf">

                    <ImageView
                        style="@style/imv_tcsf"
                        android:src="@drawable/tcsf_icon_cx" />

                    <TextView
                        style="@style/tev_tcsf"
                        android:text="查询" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llt_bj"
                    style="@style/lin_tcsf">

                    <ImageView
                        style="@style/imv_tcsf"
                        android:src="@drawable/tcsf_icon_bj" />

                    <TextView
                        style="@style/tev_tcsf"
                        android:text="补缴" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llt_setting"
                    style="@style/lin_tcsf">

                    <ImageView
                        style="@style/imv_tcsf"
                        android:src="@drawable/tcsf_icon_sz" />

                    <TextView
                        style="@style/tev_tcsf"
                        android:text="设置" />

                </LinearLayout>

                <LinearLayout style="@style/lin_tcsf">

                    <ImageView style="@style/imv_tcsf" />

                    <TextView style="@style/tev_tcsf" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
