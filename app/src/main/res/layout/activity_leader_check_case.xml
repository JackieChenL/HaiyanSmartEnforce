<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_leader_check_case"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.kas.clientservice.haiyansmartenforce.Module.Leader.LeaderCheckCaseActivity">

    <include layout="@layout/header"
        android:id="@+id/head"/>

    <ScrollView
        android:layout_below="@id/head"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/grey_devider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="开始时间"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:textColor="@color/grey_800"/>

                <TextView
                    android:id="@+id/tv_leader_check_startTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="点击选择开始时间"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_devider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="结束时间"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:textColor="@color/grey_800"/>

                <TextView
                    android:id="@+id/tv_leader_check_endTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="点击选择结束时间"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_devider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="当事人"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:textColor="@color/grey_800"/>

                <EditText
                    android:id="@+id/et_leader_check_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:hint="输入当事人"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_devider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="案发地点"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:textColor="@color/grey_800"/>

                <EditText
                    android:id="@+id/et_leader_check_position"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:hint="输入案发地点"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_devider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="案卷号"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:textColor="@color/grey_800"/>

                <EditText
                    android:id="@+id/et_leader_check_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:hint="输入案卷号"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_devider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="违法行为"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:textColor="@color/grey_800"/>

                <EditText
                    android:id="@+id/et_leader_check_activity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:hint="输入违法行为"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_devider"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shape_blue_btn"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="查 询"
                android:gravity="center"/>


            <ListView
                android:id="@+id/lv_leader_check"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:dividerHeight="1dp"
                android:divider="@color/grey_devider"
                android:layout_height="wrap_content"></ListView>

        </LinearLayout>





    </ScrollView>

</RelativeLayout>
