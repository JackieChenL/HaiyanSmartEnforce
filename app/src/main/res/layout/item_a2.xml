<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="6dp"
    android:paddingBottom="3dp"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tev_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="#838B8B"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tev_add_pic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/app_original_blue"
            android:text="新增照片"
            android:clickable="true"
            android:visibility="gone"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tev_add_graph"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:textColor="@color/app_original_blue"
            android:text="新增平面图"
            android:clickable="true"
            android:textSize="16sp" />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/llt_second"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
       >


        <ImageView
            android:id="@+id/imv_body"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/tev_body"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:lines="1"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llt_NameAct"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imv_NameAct"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/tev_NameAct"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imv_left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/tev_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

    </LinearLayout>

    <View style="@style/item_divider" />
</LinearLayout>