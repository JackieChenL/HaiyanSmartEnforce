<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/home_bg">
    
    
    <include 
	    layout="@layout/header"/>
	    />
    
    
    <RelativeLayout 
        android:id="@+id/rl_case_inquire_time"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingLeft="25dp"
	    android:background="@android:color/white"
	    >
	    <TextView
	        android:id="@+id/tv_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="时间"
	        android:paddingTop="15dp"
	        android:paddingBottom="15dp"
	         />
	    <TextView
	        android:id="@+id/tv_totality_item_time"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="15dp"
	        android:paddingBottom="15dp"
	        android:layout_toRightOf="@id/tv_time"
	        android:layout_marginLeft="10dp"
	        android:textColorHint="@color/text_color"
	        android:textSize="16sp"
	         />
	</RelativeLayout>
	
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/home_line"
	    android:layout_marginLeft="15dp"
	    />
	
	<RelativeLayout 
        android:id="@+id/rl_case_inquire_time1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingLeft="25dp"
	    android:background="@android:color/white"
	    >
	    <TextView
	        android:id="@+id/tv_time1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="违法行为"
	        android:paddingTop="15dp"
	        android:paddingBottom="15dp"
	         />
	    <TextView
	        android:id="@+id/tv_totality_item_act"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="15dp"
	        android:paddingBottom="15dp"
	        android:layout_toRightOf="@id/tv_time1"
	        android:layout_marginLeft="10dp"
	        android:textColorHint="@color/text_color"
	        android:textSize="16sp"
	         />
	</RelativeLayout>
	

	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	    android:orientation="horizontal"
	    >
	    
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="区域"
	        android:gravity="center"
	        />
	    
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="数量"
	        android:gravity="center"
	        />
	</LinearLayout>	
	
	<ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    >
			<ListView 
			    android:id="@+id/lv_totality_item"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="3dp"
			    />
			
			<View 
			    android:layout_width="match_parent"
			    android:layout_height="1dp"
			    android:background="@color/home_line"
			    />
			
			<LinearLayout 
			    android:id="@+id/ll_totality_item_num"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:paddingTop="10dp"
			    android:paddingBottom="10dp"
			    android:background="@color/log_title"
			    android:visibility="gone"
			    >
			    <TextView 
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:paddingTop="3dp"
			        android:paddingBottom="3dp"
			        android:layout_weight="1"
			        android:text="合计"
			        android:gravity="center"
			        android:textColor="@color/action_bar_blue"
			        />
			    <TextView 
			        android:id="@+id/totality_item_num"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:paddingTop="3dp"
			        android:paddingBottom="3dp"
			        android:layout_weight="1"
			        android:gravity="center"
			        android:textColor="@color/action_bar_blue"
			        />
			</LinearLayout>
	</LinearLayout>
	</ScrollView>

</LinearLayout>
