<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_header" />

    <ScrollView
        android:id="@+id/scv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/item_style_lin">

                <TextView
                    style="@style/item_style_l"
                    android:text="申请类型：" />

                <TextView
                    android:id="@+id/tev_sqlx"
                    style="@style/item_style_center"
                    android:hint="" />

            </LinearLayout>

            <View style="@style/item_divider" />

            <LinearLayout style="@style/item_style_lin">

                <TextView
                    style="@style/item_style_l"
                    android:text="保存地点：" />

                <TextView
                    android:id="@+id/tev_address"
                    style="@style/item_style_center"
                    android:hint="" />

            </LinearLayout>

            <View style="@style/item_divider" />

            <LinearLayout style="@style/item_style_lin">

                <TextView
                    style="@style/item_style_l"
                    android:text="当前状态：" />

                <TextView
                    android:id="@+id/tev_status"
                    style="@style/item_style_center"
                    android:hint="" />

            </LinearLayout>

            <View style="@style/item_divider" />

            <LinearLayout style="@style/item_style_lin">

                <TextView
                    style="@style/item_style_l"
                    android:text="物品分类：" />

                <TextView
                    android:id="@+id/tev_GoodsClassifyIDWit"
                    style="@style/item_style_center"
                    android:hint="" />

            </LinearLayout>

            <View style="@style/item_divider" />

            <LinearLayout style="@style/item_style_lin">

                <TextView
                    style="@style/item_style_l"
                    android:text="物品名称：" />

                <TextView
                    android:id="@+id/tev_NameWit"
                    style="@style/item_style_center"
                    android:hint="" />

            </LinearLayout>


            <View style="@style/item_divider" />

            <LinearLayout style="@style/item_style_lin">

                <TextView
                    style="@style/item_style_l"
                    android:text="物品数量：" />

                <TextView
                    android:id="@+id/tev_CountWit"
                    style="@style/item_style_center"
                    android:hint=""
                    android:inputType="numberDecimal" />

            </LinearLayout>

            <View style="@style/item_divider" />

            <LinearLayout style="@style/item_style_lin">

                <TextView
                    style="@style/item_style_l"
                    android:text="规格型号：" />

                <TextView
                    android:id="@+id/tev_ModelWit"
                    style="@style/item_style_center"
                    android:hint="" />

            </LinearLayout>

            <View style="@style/item_divider" />

            <LinearLayout style="@style/item_style_lin">

                <TextView
                    style="@style/item_style_l"
                    android:text="物品单位：" />

                <TextView
                    android:id="@+id/tev_UnitWit"
                    style="@style/item_style_center"
                    android:hint="" />

            </LinearLayout>

            <View style="@style/item_divider" />


            <LinearLayout style="@style/item_style_lin">

                <TextView
                    style="@style/item_style_l"
                    android:text="备注信息：" />

                <TextView
                    android:id="@+id/tev_RemarkWit"
                    style="@style/item_center_style"
                    android:text="" />
            </LinearLayout>

            <View style="@style/item_divider" />


            <ImageView
                android:id="@+id/imv_goods"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:layout_margin="10dp" />
        </LinearLayout>
    </ScrollView>
        <include
            layout="@layout/goods_action_layout"/>
</LinearLayout>