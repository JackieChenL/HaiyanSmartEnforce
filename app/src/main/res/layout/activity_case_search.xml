<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_case_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kas.clientservice.haiyansmartenforce.Module.CaseCommit.CaseSearchActivity">

    <include layout="@layout/header"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="案件编号："
        android:textColor="@color/text_black" />

    <EditText
        android:id="@+id/tv_caseSearch_code"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_black_border" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="违法时间："
        android:textColor="@color/text_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        >

        <TextView
            android:id="@+id/tv_caseSearch_startTime"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:ellipsize="end"
            android:background="@drawable/shape_black_border" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="至"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_caseSearch_endTime"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:ellipsize="end"
            android:background="@drawable/shape_black_border" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_caseSearch_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="查询"
        android:gravity="center"
        android:layout_gravity="right"
        android:background="@drawable/shape_blue_btn"
        android:textColor="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grey_devider"
        android:layout_marginTop="10dp"/>

    <ListView
        android:id="@+id/lv_caseSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:divider="@color/grey_devider"></ListView>

</LinearLayout>
