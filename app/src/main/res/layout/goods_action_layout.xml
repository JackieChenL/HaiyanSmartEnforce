<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llt_action_footer"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:orientation="horizontal"
    android:layout_height="45dp">

    <LinearLayout
        android:id="@+id/llt_nomal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tev_repeating"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/app_original_blue"
            android:clickable="true"
            android:gravity="center"
            android:text="转存"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tev_processing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/app_original_blue"
            android:clickable="true"
            android:gravity="center"
            android:text="工艺处理"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tev_destroy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/app_original_blue"
            android:clickable="true"
            android:gravity="center"
            android:text="销毁"
            android:textColor="@color/white"
            android:textSize="17sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/llt_release"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/app_original_blue"
            android:gravity="center"
            android:text="解除扣押"
            android:textColor="@color/white"
            android:textSize="17sp" />






    </LinearLayout>



</LinearLayout>