<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/layout_header" />

        <ScrollView
            android:id="@+id/scv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout style="@style/item_style_lin">

                    <TextView
                        style="@style/item_style_l"
                        android:text="申请类型:" />

                    <TextView
                        android:id="@+id/tev_sqlx"
                        style="@style/item_center_style"
                        android:hint="请选择申请类型" />

                </LinearLayout>

                <TextView style="@style/item_divider" />


                <!--<LinearLayout style="@style/item_style_lin">-->

                    <!--<TextView-->
                        <!--style="@style/item_style_l"-->
                        <!--android:text="保存方式:" />-->

                    <!--<TextView-->
                        <!--android:id="@+id/tev_bcfs"-->
                        <!--style="@style/item_center_style"-->
                        <!--android:hint="请选择保存方式" />-->

                <!--</LinearLayout>-->

                <!--<TextView style="@style/item_divider" />-->

                <LinearLayout style="@style/item_style_lin">

                    <TextView
                        style="@style/item_style_l"
                        android:text="存放地点:" />

                    <TextView
                        android:id="@+id/tev_address"
                        style="@style/item_center_style"
                        android:hint="请选择存放地点" />

                </LinearLayout>

                <TextView style="@style/item_divider" />


                <LinearLayout style="@style/item_style_lin">

                    <TextView
                        style="@style/item_style_l"
                        android:text="文号:" />


                    <TextView
                        android:id="@+id/tev_referNumber_title"
                        style="@style/item_center_style"
                        android:layout_weight="0"
                        android:text="请选择存我（2018）放地点" />

                    <EditText
                        android:id="@+id/edt_referNumber"
                        style="@style/item_center_style"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/border"
                        android:hint="文书编号"
                        android:inputType="number"
                        android:text=""
                        android:padding="3dp"
                        />
                    <TextView
                        style="@style/item_center_style"
                        android:layout_weight="0"
                        android:text="号" />

                </LinearLayout>

                <TextView style="@style/item_divider" />

                <LinearLayout style="@style/item_style_lin">

                    <TextView
                        style="@style/item_style_l"
                        android:text="扣押日期:" />

                    <TextView
                        android:id="@+id/tev_start_time"
                        style="@style/item_center_style" />

                </LinearLayout>

                <TextView style="@style/item_divider" />

                <LinearLayout style="@style/item_style_lin">

                    <TextView
                        style="@style/item_style_l"
                        android:text="到期日期:" />

                    <TextView
                        android:id="@+id/tev_end_time"
                        style="@style/item_center_style" />

                </LinearLayout>

                <TextView style="@style/item_divider" />

                <LinearLayout style="@style/item_style_lin">

                    <TextView
                        style="@style/item_style_l"
                        android:text="申请依据:" />

                    <TextView
                        android:id="@+id/tev_sqyj"
                        style="@style/item_center_style"
                        android:text="" />

                </LinearLayout>

                <TextView style="@style/item_divider" />


                <LinearLayout style="@style/item_style_lin">

                    <TextView
                        style="@style/item_style_l"
                        android:text="简要案情:" />

                    <EditText
                        android:id="@+id/edt_describe"
                        style="@style/item_center_style"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/border"
                        android:hint="请输入案情描述"
                        android:minLines="3"
                        android:padding="3dp"
                        android:singleLine="false" />

                </LinearLayout>

                <TextView style="@style/item_divider" />


                <LinearLayout style="@style/item_style_lin">

                    <TextView
                        style="@style/item_style_l"
                        android:text="处理意见:" />

                    <EditText
                        android:id="@+id/edt_suggest"
                        style="@style/item_center_style"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/border"
                        android:hint="请输入处理意见"
                        android:minLines="3"
                        android:padding="3dp"
                        android:singleLine="false" />

                </LinearLayout>

                <TextView style="@style/item_divider" />


                <LinearLayout style="@style/item_style_lin">


                    <TextView
                        style="@style/item_style_l"
                        android:text="物品清单:" />

                    <ImageView
                        android:id="@+id/imv_add"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_margin="15dp"
                        android:src="@drawable/btn_capture_n" />
                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>


            </LinearLayout>

        </ScrollView>
    </LinearLayout>

