<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_huan_wei_entry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kas.clientservice.haiyansmartenforce.Module.HuanWeiModule.HuanWeiEntryActivity">

    <include layout="@layout/header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/tv_huanwei_handle"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="操作"
            android:gravity="center"
            android:textSize="18sp"
            android:background="@color/app_original_blue"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/tv_huanwei_search"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="历史记录"
            android:gravity="center"
            android:textSize="18sp"
            android:background="@color/app_original_blue"
            android:textColor="@color/white"/>

    </LinearLayout>


</LinearLayout>
