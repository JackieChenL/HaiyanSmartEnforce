<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/layout_header" />



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    style="@style/item_style_rtl">

                    <TextView
                        android:id="@+id/tev_ReferenceNumber_l"
                        style="@style/item_style_l"
                        android:text="案源编号:" />

                    <TextView
                        android:id="@+id/tev_ReferenceNumber"
                        style="@style/item_style_center"
                        android:layout_toRightOf="@+id/tev_ReferenceNumber_l" />

                </RelativeLayout>
                <TextView style="@style/item_divider" />
                <RelativeLayout
                    style="@style/item_style_rtl">

                    <TextView
                        android:id="@+id/tev_EntryTimeSou_l"
                        style="@style/item_style_l"
                        android:text="录入时间:" />

                    <TextView
                        android:id="@+id/tev_EntryTimeSou"
                        style="@style/item_style_center"
                        android:layout_toRightOf="@+id/tev_EntryTimeSou_l" />

                </RelativeLayout>
                <TextView style="@style/item_divider" />
                <RelativeLayout
                    style="@style/item_style_rtl">

                    <TextView
                        android:id="@+id/tev_AddressSou_l"
                        style="@style/item_style_l"
                        android:text="案发地址:" />

                    <TextView
                        android:id="@+id/tev_AddressSou"
                        style="@style/item_style_center"
                        android:layout_toRightOf="@+id/tev_AddressSou_l" />

                </RelativeLayout>
                <TextView style="@style/item_divider" />
                <RelativeLayout
                    style="@style/item_style_rtl">

                    <TextView
                        android:id="@+id/tev_NameForShort_l"
                        style="@style/item_style_l"
                        android:text="权力名称:" />

                    <TextView
                        android:id="@+id/tev_NameForShort"
                        style="@style/item_style_center"
                        android:layout_toRightOf="@+id/tev_NameForShort_l" />

                </RelativeLayout>
                <TextView style="@style/item_divider" />

                <LinearLayout
                    style="@style/item_style_lin">

                    <TextView
                        style="@style/item_style_l"
                        android:text="处理内容:" />

                    <TextView
                        android:id="@+id/tev_ContentSou"
                        style="@style/item_center_style"
                        android:hint="" />

                </LinearLayout>


                <TextView style="@style/item_divider" />

                <LinearLayout
                    style="@style/item_style_lin"
                    android:minHeight="40dp">

                    <TextView
                        style="@style/item_style_l"
                        android:text="证据列表:" />


                </LinearLayout>

                <TextView style="@style/item_divider" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                </android.support.v7.widget.RecyclerView>


            </LinearLayout>

        </ScrollView>
    </LinearLayout>





</LinearLayout>