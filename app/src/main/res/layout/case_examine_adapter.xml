<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#EBEBEB"
        >
        
        <ImageView 
            android:id="@+id/item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/loginicon_user"
            android:layout_marginLeft="20dp"
            
            />
        <TextView 
            android:id="@+id/tv_examine_adapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_toRightOf="@id/item_icon"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            />
    </RelativeLayout>
    
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        
        <TextView 
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="案件编号"
            android:textColor="@color/text_color"
            />
        <TextView 
            android:id="@+id/tv_examine_adapter_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_toRightOf="@id/item_name"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            />
    </RelativeLayout>
    <View 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/grey_devider"
	    android:layout_marginLeft="15dp"
	    />
    
     <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        
        <TextView 
            android:id="@+id/item_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="任务时间"
            android:textColor="@color/text_color"
            />
        <TextView 
            android:id="@+id/tv_examine_adapter_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_toRightOf="@id/item_start"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            />
    </RelativeLayout>
    <View 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/grey_devider"
	    android:layout_marginLeft="15dp"
	    />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        
        <TextView 
            android:id="@+id/item_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="处理环节"
            android:textColor="@color/text_color"
            />
        <TextView 
            android:id="@+id/tv_examine_adapter_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_toRightOf="@id/item_over"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            />
    </RelativeLayout>

</LinearLayout>
